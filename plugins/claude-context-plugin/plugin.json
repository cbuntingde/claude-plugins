{
  "name": "context-memory",
  "description": "Automatic context memory plugin for Claude Code with hooks",
  "version": "1.0.0",
  "entry_point": "src.memory",
  "hooks": [
    "on_start_session",
    "on_end_session",
    "on_user_message",
    "on_assistant_message",
    "on_tool_use",
    "on_file_change",
    "on_error",
    "on_decision",
    "on_complete"
  ],
  "settings": [
    {
      "name": "auto_capture",
      "type": "boolean",
      "description": "Automatically capture session data",
      "default": true
    },
    {
      "name": "learn_from_errors",
      "type": "boolean",
      "description": "Automatically learn from errors",
      "default": true
    },
    {
      "name": "min_importance",
      "type": "number",
      "description": "Minimum importance threshold for auto-capture",
      "default": 0.6
    }
  ]
}